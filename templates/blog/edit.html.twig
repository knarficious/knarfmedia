{% extends 'base.html.twig' %}

{% block body_id 'blog_post_edit' %}

{% block main %}
    <h1>{{ 'title.edit_post'|trans({'%id%': post.id}) }}</h1>

    {{ include('blog/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = true) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('blog_post', {slug: post.slug}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show_post'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('blog/_delete_form.html.twig', {post: post}, with_context = false) }}
    </div>

    {{ parent() }}
{% endblock %}
