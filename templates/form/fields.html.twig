{#
   Each field type is rendered by a template fragment, which is determined
   by the name of your form type class (DateTimePickerType -> date_time_picker)
   and the suffix "_widget". This can be controlled by overriding getBlockPrefix()
   in DateTimePickerType.

   See https://symfony.com/doc/current/form/create_custom_field_type.html#creating-the-form-type-template
#}

{% block date_time_picker_widget %}
    <div class="input-group" id='post_publishedAt' data-td-target-input='nearest' data-td-target-toggle='nearest'>
    	{{ block('datetime_widget') }}
        <span class="input-group-text" data-td-target='#post_publishedAt' data-td-toggle='datetimepicker'>
            <span class="fas fa-calendar" aria-hidden="true"></span>
        </span>
    </div>
{% endblock %}

{% block tags_input_widget %}
    <div class="input-group">
        {{ form_widget(form, {'attr': {'id': 'post_tags', 'data-allow-new': 'true', 'data-allow-clear': 'true', 'multiple': 'multiple'}, 'attr_label': {'for': 'post_tags'}}) }}
        <span class="input-group-addon">
            <span class="fa fa-tags" aria-hidden="true"></span>
        </span>
    </div>
{% endblock %}
